<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="282dp"
	android:layout_height="216dp"
	>

	<!-- 
	
                    8 dp padding
	8dp padding  | 240 dp kotak  | 14dp kosong |  26dp hue | 8dp padding -> total 296
                    8 dp padding
					    v
					  total 256
	 -->
	 
	 
	<yuku.ambilwarna.AmbilWarnaKotak
		android:id="@+id/ambilwarna_viewKotak"
		android:layout_x="8dp"
		android:layout_y="8dp"
		android:layout_width="200dp"
		android:layout_height="200dp" />

	<ImageView
		android:id="@+id/ambilwarna_viewHue"
		android:layout_x="222dp"
		android:layout_y="8dp"
		android:layout_width="40dp"
		android:layout_height="200dp"
		android:src="@drawable/ambilwarna_hue"
		android:scaleType="fitXY" />

	<ImageView
		android:id="@+id/ambilwarna_panah"
		android:layout_x="212dp"
		android:layout_y="4dp"
		android:layout_width="8dp"
		android:layout_height="9dp"
		android:src="@drawable/ambilwarna_panah"
		android:scaleType="matrix" />

	<ImageView
		android:id="@+id/ambilwarna_keker"
		android:layout_x="3dp"
		android:layout_y="3dp"
		android:layout_width="11dp"
		android:layout_height="11dp"
		android:src="@drawable/ambilwarna_keker"
		android:scaleType="matrix" />

</AbsoluteLayout>
