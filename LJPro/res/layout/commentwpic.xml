<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/comment"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  <View android:id="@+id/pheader" android:background="@drawable/commentheader" 
    android:layout_width="fill_parent" 
 
  android:layout_height="75dp"></View>
  
  
   <ImageView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/duserpic"
     android:layout_height="50dp"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:layout_width="50dp"
     android:scaleType="centerCrop"
     android:src="@drawable/defaultuserpic"
    />  
        <ImageView  xmlns:android="http://schemas.android.com/apk/res/android"       
        android:layout_marginLeft="8dp" android:id="@+id/tframe" 
       android:layout_marginTop="9dp" android:layout_width="55dp" 
        android:layout_height="54dp" android:background="@drawable/tframe2"/>

     <TextView  xmlns:android="http://schemas.android.com/apk/res/android" 
     android:layout_toRightOf="@+id/duserpic"
      android:textSize="20dp"
      android:singleLine="true"
      
      android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
      android:textStyle="bold"
      android:layout_height="25dp"
      android:textColor="#FFF6D5"
      android:layout_width="fill_parent"
      android:id="@+id/uname"
      ></TextView>
        <TextView  xmlns:android="http://schemas.android.com/apk/res/android" 
       android:layout_toRightOf="@+id/duserpic"
      android:layout_below="@+id/uname"
      android:textSize="12dp"
      android:singleLine="true"
      android:layout_marginLeft="10dp"
      android:textStyle="bold"      
      android:layout_height="25dp"
      android:textColor="#FFF6D5"
      android:layout_width="wrap_content"
      android:id="@+id/cdate"
      ></TextView>
      
	  <TextView 
        android:layout_below="@+id/cdate"
     android:layout_centerHorizontal="true"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
      android:textSize="18dp"
      android:layout_marginTop="15dp"
      android:textStyle="bold"
      android:background="#000000"
      android:layout_height="wrap_content"
      android:textColor="#FFFFFF"
      android:layout_width="wrap_content"
      android:layout_weight="1"
      android:id="@+id/csubject"
      ></TextView>   
      <com.electronapps.LJPro.PostView 
 	  android:layout_width="fill_parent"
 	  android:typeface="sans"   android:id="@+id/post" 
 	  android:layout_margin="10dp"
 	  android:layout_below="@+id/csubject"
 	  android:background="#000000"
 	  android:textSize="16dp"
 	  android:layout_height="wrap_content" 
 	  android:textColor="#FFFFFF" />
 	  
 	  <Button android:id="@+id/replyto"  android:clickable="true" android:layout_below="@+id/post" android:layout_alignParentRight="true"  android:layout_marginRight="10dp" android:layout_height="wrap_content" 
	 android:layout_width="wrap_content" android:background="@drawable/replybg"></Button>
      
      
  
</RelativeLayout>


