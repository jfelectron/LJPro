<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:orientation="horizontal" android:layout_height="fill_parent"
	android:padding="5dp">
	<ImageView android:id="@+id/status_icon"
		android:src="@drawable/uploadicon"
		android:layout_width="30dp"  android:layout_height="30dp"
		 />

	<LinearLayout android:layout_width="fill_parent"  android:layout_weight="1" android:orientation="vertical"
		android:layout_height="fill_parent" >

		<TextView android:id="@+id/status_text" android:textAppearance="@android:style/TextAppearance" android:layout_marginLeft="5dp" android:textSize="14dp"  android:textStyle="bold" android:layout_width="fill_parent" android:layout_height="wrap_content" />
			<TextView android:id="@+id/title" android:textAppearance="@android:style/TextAppearance" android:text="testing" android:layout_marginLeft="5dp" android:layout_width="fill_parent"
			android:layout_height="wrap_content"/>
		<ProgressBar android:id="@+id/status_progress"
			android:layout_width="fill_parent" android:layout_height="10dp"
			android:progressDrawable="@android:drawable/progress_horizontal"
			android:indeterminate="false" android:indeterminateOnly="false" />


	</LinearLayout>

</LinearLayout>
