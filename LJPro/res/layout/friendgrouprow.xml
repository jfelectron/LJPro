<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_margin="10dp"
  android:layout_height="wrap_content"
  android:background="@drawable/postheaderbg"> >
  

 
    <TextView  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_toRightOf="@+id/duserpic"
      android:layout_centerVertical="true"
      android:textSize="20dp"
      android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
      android:singleLine="true"
      android:layout_height="wrap_content"
     	android:textColor="#FFF6D5"
     	android:textStyle="bold"
      android:maxWidth="230dp"
      android:layout_width="wrap_content"
      android:id="@+id/groupname"
      ></TextView>
  	<CheckBox android:id="@+id/delete" android:focusable="false" android:layout_alignParentRight="true" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
   
</RelativeLayout>
