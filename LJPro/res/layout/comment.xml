<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
android:id="@+id/comment"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  
  <LinearLayout android:id="@+id/pheader" android:background="@drawable/commentheader" 
    android:layout_width="fill_parent" 	
    android:orientation="horizontal"
  android:layout_height="wrap_content">
  
   <ImageView android:id="@+id/duserpic"
     android:layout_height="50dp"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="10dp"
     android:layout_width="50dp"
     android:scaleType="centerCrop"
     android:src="@drawable/defaultuserpic"
    />  
  
   
  
 <LinearLayout android:layout_weight="1"  
    android:layout_width="fill_parent" 	
    android:orientation="vertical"
  	android:layout_height="wrap_content">
     <TextView  
    
      android:textSize="20dp"
      android:singleLine="true"
      android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
      android:textStyle="bold"
      android:layout_height="wrap_content"
      android:textColor="#FFF6D5"
       android:gravity="center_horizontal"
      android:layout_width="fill_parent"
      android:id="@+id/uname"
      ></TextView>
        <TextView 
      
      android:textSize="12dp"
      android:singleLine="true"
      android:layout_marginLeft="10dp"
    android:gravity="center_horizontal"
      android:textStyle="bold"      
      android:layout_height="25dp"
      android:textColor="#FFFFFF"
      android:layout_width="fill_parent"
      android:id="@+id/cdate"
      ></TextView>
      </LinearLayout>
      </LinearLayout>
	  <TextView 
        android:layout_below="@+id/pheader"
     android:layout_centerHorizontal="true"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
      android:textSize="18dp"
      android:layout_marginTop="15dp"
      android:textStyle="bold"
      android:background="#000000"
      android:layout_height="wrap_content"
      android:textColor="#FFFFFF"
      android:layout_width="wrap_content"
      android:layout_weight="1"
      android:id="@+id/csubject"
      ></TextView>   
      <com.electronapps.LJPro.PostView 
 	  android:layout_width="fill_parent"
 	  android:typeface="sans"   android:id="@+id/post" 
 	  android:layout_margin="10dp"
 	  android:layout_below="@+id/csubject"
 	  android:background="#000000"
 	  android:textSize="16dp"
 	  android:layout_height="wrap_content" 
 	  android:textColor="#FFFFFF" />
 	  
 	  <Button android:id="@+id/replyto"  android:clickable="true" android:layout_below="@+id/post" android:layout_alignParentRight="true"  android:layout_marginRight="10dp" android:layout_height="wrap_content" 
	 android:layout_width="wrap_content" android:background="@drawable/replybg"></Button>
      
      
  
</RelativeLayout>


